@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning mx-auto" style="max-width: 600px;" role="alert">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="btn btn-lg btn-danger w-100" type="submit">Delete data and close my account</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* General styles */
    body {
        background-color: #f8f9fa; /* Light background for contrast */
        font-family: 'Helvetica Neue', Arial, sans-serif;
    }

    h3 {
        color: #343a40; /* Dark text for headings */
        text-align: center;
        margin-bottom: 20px;
    }

    /* Alert styling */
    .alert {
        margin: 20px 0; /* Space around alert */
        text-align: center; /* Center text */
        font-weight: bold; /* Bold text for emphasis */
    }

    /* Form container */
    .row {
        display: flex;
        justify-content: center;
    }

    /* Card styling */
    .col-md-6 {
        background-color: #ffffff; /* White background for the form */
        border-radius: 12px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        padding: 40px; /* Padding around the form */
        margin-bottom: 260px; /* Space below the form */
        margin-top: 20px; /* Space above the form */
    }

    /* Form elements */
    .form-floating {
        margin-bottom: 25px; /* Space between form fields */
    }

    .form-control {
        border: 1px solid #ced4da; /* Default border color */
        border-radius: 5px; /* Rounded corners for input fields */
        padding: 12px; /* Padding for input fields */
        transition: border-color 0.3s, box-shadow 0.3s; /* Smooth transitions */
    }

    .form-control:focus {
        border-color: #dc3545; /* Red border color on focus */
        box-shadow: 0 0 5px rgba(220, 53, 69, 0.5); /* Focus shadow */
    }

    /* Button styling */
    .btn-danger {
        background-color: #dc3545; /* Danger button color */
        border: none; /* Remove default border */
        border-radius: 5px; /* Rounded button corners */
        font-weight: bold; /* Bold text */
        padding: 12px; /* Padding inside button */
    }

    .btn-danger:hover {
        background-color: #c82333; /* Darker shade on hover */
    }

    /* Validation error messages */
    .text-danger {
        font-size: 0.875rem; /* Smaller font for error messages */
    }

    /* Responsive styles */
    media (max-width: 768px) {
        .col-md-6 {
            width: 90%; /* Make the form more responsive */
            margin: 0 auto; /* Center the form */
        }
    }
</style>
